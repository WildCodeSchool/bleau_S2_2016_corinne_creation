{% extends 'base.html.twig' %}

{% block body %}
    <h1>Objet</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ objet.id }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ objet.source }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ objet.alt }}</td>
            </tr>
            <tr>
                <th>Definition</th>
                <td>{{ objet.definition }}</td>
            </tr>
            <tr>
                <th>Slider</th>
                <td>{% if objet.slider %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('objet_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('objet_edit', { 'id': objet.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
