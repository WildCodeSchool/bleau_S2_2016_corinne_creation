        <header>
            <nav>
                <div class="col s12">
                    <div class="navac-wrapper black">
                        <a href="#" class="brandac-logo amber-text">Gestion des oeuvres : Authentification</a>
                    </div>
                </div>
            </nav>
        </header>
        <main role="main" id="access-main" class="">

            <div id="access-form" class="">
                <div class="container">
                    <div class="row">
                        <form class="col s12" method="post" action="{{ path('admin_index') }}">
                            <div class="row">
                                <div class="input-field col s12 offset-m3 m6">
                                    <i class="material-icons prefix black-text">account_circle</i>

                                    <label class="login" for="icon_prefix">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                                    <input id="icon_prefix" type="text" class="validate amber-text black" name="_username" value="{{ last_username }}"  autofocus required>

                                    {#<label for="icon_prefix" class="amber-text">Identification</label>#}
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12 offset-m3 m6">
                                    <i class="material-icons prefix black-text">verified_user</i>

                                    <label class="login" for="icon_prefix">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                                    <input id="icon_verified_user" type="password" class="validate amber-text" name="_password" value="" required="required">

                                    {#<label for="icon_verified_user" class="amber-text">Mot de passe</label>#}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col offset-l5 l4">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                                </div>

                            <div class="row">
                                <div class="col s12 offset-m3 m2">
                                    <button class="waves-effect waves-light btn amber black-text" type="reset" name="reset_action">Annuler</button>
                                </div>
                                <div class="col s12 offset-m2 m2">
                                    <button class="waves-effect waves-light btn amber black-text" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}">Valider
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
