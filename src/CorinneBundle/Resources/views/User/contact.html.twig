{% extends '@Corinne/layout.html.twig' %}


{% block header %}{% endblock %}

{% block body %}
<header>
    <nav class="black">
        <div class="nav-wrapper">
            <a href="#" class="brand-logo center amber-text">Contactez-nous</a>
        </div>
    </nav>
</header>

<div id="contact-body" class="">
    <main role="main" id="contact-main" class="">

        <div id="contact-form " class="">

            <div class="container" >
                <div class="row">
                    <form class="">

                        <fieldset id="fieldset-contact" class="amber-text black">
                            <legend class="amber-text">Vos coordonnées</legend>

                            <div class="row">
                                <div class="input-field col s12 m6 amber-text">
                                    <i class="material-icons prefix amber-text">perm_identity</i>
                                    <input id="prenom" type="text" class="validate amber-text"  autofocus required="" >
                                    <label for="prenom" class="amber-text">Prénom</label>
                                </div>
                                <div class="input-field col s12 m6">
                                    <i class="material-icons prefix amber-text">perm_identity</i>
                                    <input id="nom" type="text" class="validate amber-text" required="">
                                    <label for="nom" class="amber-text">Nom</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix amber-text">phone</i>
                                    <input id="telephone" type="tel" class="validate amber-text">
                                    <label for="telephone" class="amber-text">Téléphone</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix  amber-text">email</i>
                                    <input id="email" type="email" class="validate amber-text">
                                    <label for="email" class="amber-text">Email</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix amber-text">mode_edit</i>
                                    <textarea  class="materialize-textarea amber-text" name="textarea1" id="" cols="30" rows="10"> </textarea>
                                    <label for="textarea1" class="amber-text">Votre message</label>
                                </div>
                                <div>
                                    <p>
                                        <input type="checkbox" id="test5" />
                                        <label for="test5" class="amber-text">J'accepte l'enregitrement de mes données</label>
                                    </p>
                                </div>
                            </div>

                            <div class="row">
                                <button class="btn waves-effect waves-light offset-s2 col s3  offset-m2 m2 amber black-text" type="submit" name="submit_action">Envoyer
                                    <i class="material-icons right">send</i>
                                </button>


                                <button class="btn waves-effect waves-light offset-s2 col s3 offset-m4 m2 amber black-text left" type="reset" name="reset_action">Annuler
                                    <i class="material-icons right black-text">loop</i>
                                </button>

                                <button class="modal-action modal-close btn waves-effect waves-light offset-s2 col s3 offset-m4 m2 amber black-text center" type="reset" name="reset_action">Fermer
                                    <i class="material-icons right black-text">shuffle</i>
                                </button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}

{% block footer %}
{% endblock %}