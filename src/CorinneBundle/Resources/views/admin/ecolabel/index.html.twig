{#{% extends 'base.html.twig' %}#}

<!DOCTYPE html>
<html>
<head>

    <meta charset="UTF-8" />
    <title>{% block title %}CorinneCr√©ation{% endblock %}</title>

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">


    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Crete+Round|Days+One|Fredoka+One|Nunito|Parisienne|Pinyon+Script|Rochester|Sacramento|Sofia" rel="stylesheet">

    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/corinne/css/materialize.min.css') }}" media="screen,projection">
    {#<link type="text/css" rel="stylesheet" href="{{ asset('bundles/corinne/css/main.css') }}">#}

</head>

{% block body %}
<div class="container">
    <div class="card teal center">
    <h1 class="white-text">Ecolabel list :</h1>
    </div>
    <table class="bordered highlight centered responsive-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Source</th>
                <th>Alt</th>
                <th>Texte</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ecolabel in ecolabels %}
            <tr>
                <td><a href="{{ path('ecolabel_show', { 'id': ecolabel.id }) }}">{{ ecolabel.id }}</a></td>
                <td>{{ ecolabel.source }}</td>
                <td>{{ ecolabel.alt }}</td>
                <td>{{ ecolabel.texte }}</td>
                <td>
                    <ul>
                        {#<li>#}
                            {#<a href="{{ path('ecolabel_show', { 'id': ecolabel.id }) }}">show</a>#}
                        {#</li>#}
                        <li>
                            <a href="{{ path('ecolabel_edit', { 'id': ecolabel.id }) }}" class="waves-effect waves-light btn" style="width:100px">editer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#<ul>#}
        {#<li>#}
            {#<a href="{{ path('ecolabel_new') }}">Create a new entry</a>#}
        {#</li>#}
    {#</ul>#}
</div>
{% endblock %}
