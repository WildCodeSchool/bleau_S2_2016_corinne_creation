    <div class="container center">
        <div class="card teal center">
            <h1 class="white-text">Ajouter une oeuvre :</h1>
        </div>

        {{ form_start(form) }}
        <center>
        <div class="reducto">
            <div class="row left-align">
                <div class="col s12">
                    <label><h6>Image</h6></label>
                    {{ form_widget(form.sousCateg) }}
