{% extends '@Corinne/admin/index.html.twig' %}


{% block body %}
    <div class="container">
        <div class="card teal center">
            <h1 class="white-text">Editer une categorie :</h1>
        </div>

        {{ form_start(edit_form) }}
        <div>
            <label>Nom de la cat√©gorie</label>
            {{ form_widget(edit_form.nomcat) }}
            {{ form_errors(edit_form.nomcat) }}
        </div>
        <div>
            <label>Image de la categorie</label>
            {{ form_widget(edit_form.source) }}
            {{ form_errors(edit_form.source) }}
        </div>
        <div>
            <label>Alt</label>
            {{ form_widget(edit_form.alt) }}
            {{ form_errors(edit_form.alt) }}
        </div>
        <div class="row center">
            <ul>
                <li>
                    <input class="waves-effect waves-light btn" type="submit" value="Valider" />
                    <a href="{{ path('categorie_index') }}" class="waves-effect waves-light btn">Retour a la Liste</a>
                </li>
            </ul>
        </div>

        {{ form_end(edit_form) }}

    </div>
{% endblock %}
