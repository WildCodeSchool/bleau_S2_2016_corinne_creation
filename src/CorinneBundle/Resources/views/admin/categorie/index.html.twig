{#{% extends 'base.html.twig' %}#}

<!DOCTYPE html>
<html>
<head>

    <meta charset="UTF-8"/>

    <title>{% block title %}CorinneCr√©ation{% endblock %}</title>

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Crete+Round|Days+One|Fredoka+One|Nunito|Parisienne|Pinyon+Script|Rochester|Sacramento|Sofia"
          rel="stylesheet">

    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/corinne/css/materialize.min.css') }}"
          media="screen,projection">
    {#<link type="text/css" rel="stylesheet" href="{{ asset('bundles/corinne/css/main.css') }}">#}

</head>

{% block body %}

    <div class="container">
        <div class="card teal center">
            <h1 class="white-text">Liste des Categories :</h1>
        </div>

        <table class="bordered highlight centered responsive-table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nomcat</th>
                <td> Image </td>
                <td>Alt</td>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td><a href="{{ path('categorie_show', { 'id': categorie.id }) }}">{{ categorie.id }}</a></td>
                    <td>{{ categorie.nomcat }}</td>
                    <td>
                        <img src="{{ asset('uploads/pictures/' ~ categorie.source) }}" alt="" />

                    </td>
                    <td>{{ categorie.alt }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('categorie_show', { 'id': categorie.id }) }}"
                                   class="waves-effect waves-light btn" style="width:100px">voir</a>
                            </li>
                            <li>
                                <a href="{{ path('categorie_edit', { 'id': categorie.id }) }}"
                                   class="waves-effect waves-light btn" style="width:100px">editer</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('categorie_new') }}" class="waves-effect waves-light btn" style="width:280px">Ajouter
                    une categorie</a>
            </li>
        </ul>
        <ul>
            <li>
                <a href="{{ path('menu_categorie') }}" class="waves-effect waves-light btn" style="width:280px">Retour
                    au menu</a>
            </li>
        </ul>
    </div>

{% endblock %}
