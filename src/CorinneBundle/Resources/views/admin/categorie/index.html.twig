{% extends '@Corinne/admin/index.html.twig' %}



{% block body %}

    <div class="container">

        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card teal center">
                    <h1 class="white-text">Listes des Categories :</h1>
                </div>
            </div>
        </div>

        <div class="row center">
            <div class="col s12 m6 l6">
                <a href="{{ path('categorie_new') }}" class="waves-effect waves-light btn" style="width:280px">Nouvelle catégorie</a>
            </div>
            <div class="col s12 m6 l6">
                <a href="{{ path('menu_categorie') }}" class="waves-effect waves-light btn" style="width:280px">Retour
                    au menu</a>
            </div>
        </div>

        <div class="row center">
                <div class="col s12 m6 l3">
                </div>
                <div class="col s12 m6 l3">
                    <p>Numéro de catégorie</p>
                </div>
                <div class="col s12 m6 l3">
                    <p>Catégorie</p>
                </div>
                <div class="col s12 m6 l3">
                </div>
        </div>

        {% for categorie in categories %}
        <div class="row center">
                <div class="col s12 m6 l3">
                </div>
                <a href="{{ path('categorie_edit', { 'id': categorie.id }) }}">
                    <div class="e">
                        <div class="col s12 m6 l3 f">
                            {{ categorie.id }}
                        </div>
                        <div class="col s12 m6 l3 f">
                            {{ categorie.nomcat }}
                        </div>
                    </div>
                </a>
                <div class="col s12 m6 l3">
                    <img src="{{ asset('bundles/corinne/images/poubelle.png') }}">
                </div>
        </div>
        {% endfor %}

    </div>

{% endblock %}
