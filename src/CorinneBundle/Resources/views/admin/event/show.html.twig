{#{% extends 'base.html.twig' %}#}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}CorinneCr√©ation{% endblock %}</title>

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Crete+Round|Days+One|Fredoka+One|Nunito|Parisienne|Pinyon+Script|Rochester|Sacramento|Sofia" rel="stylesheet">

    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/corinne/css/materialize.min.css') }}" media="screen,projection">
    {#<link type="text/css" rel="stylesheet" href="{{ asset('bundles/corinne/css/main.css') }}">#}

</head>

{% block body %}
<div class="container">
    <div class="card teal center">
    <h1>Event</h1>
    </div>
    <table class="bordered  highlight center responsive-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ event.titre }}</td>
            </tr>
            <tr>
                <th>Descriptif</th>
                <td>{{ event.descriptif }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if event.dateDebut %}{{ event.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if event.dateFin %}{{ event.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ event.lieu }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('event_index') }}" class="waves-effect waves-light btn" style="width:220px">Retour a la Liste</a>
        </li>
        <li>
            <a href="{{ path('event_edit', { 'id': event.id }) }}" class="waves-effect waves-light btn" style="width:220px">Editer</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="waves-effect waves-light btn" type="submit" value="Supprimer" style="width:220px">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
