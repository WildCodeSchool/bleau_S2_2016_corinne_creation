{#{% extends 'base.html.twig' %}#}

<!DOCTYPE html>
<html>
<head>

    <meta charset="UTF-8"/>

    <title>{% block title %}CorinneCr√©ation{% endblock %}</title>

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Crete+Round|Days+One|Fredoka+One|Nunito|Parisienne|Pinyon+Script|Rochester|Sacramento|Sofia"
          rel="stylesheet">

    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/corinne/css/materialize.min.css') }}"
          media="screen,projection">
    {#<link type="text/css" rel="stylesheet" href="{{ asset('bundles/corinne/css/main.css') }}">#}

</head>

{% block body %}
<div class="container">
    <div class="card teal center">
    <h1>Event list :</h1>
    </div>
    <table class="bordered highlight centered responsive-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Descriptif</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Lieu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td><a href="{{ path('event_show', { 'id': event.id }) }}">{{ event.id }}</a></td>
                <td>{{ event.titre }}</td>
                <td>{{ event.descriptif }}</td>
                <td>{% if event.dateDebut %}{{ event.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if event.dateFin %}{{ event.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ event.lieu }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('event_show', { 'id': event.id }) }}" class="waves-effect waves-light btn" style="width:100px">voir</a>
                        </li>
                        <li>
                            <a href="{{ path('event_edit', { 'id': event.id }) }}" class="waves-effect waves-light btn" style="width:100px">editer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('event_new') }}" class="waves-effect waves-light btn" style="width:280px">Ajouter un event</a>
        </li>
    </ul>
    <ul>
        <li>
            <a href="{{ path('menu_categorie') }}" class="waves-effect waves-light btn" style="width:280px">Retour
                au menu</a>
        </li>
    </ul>
</div>
{% endblock %}
